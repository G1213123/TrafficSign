{
  "name": "road-sign-factory-backend",
  "version": "1.0.0",
  "description": "Backend API for Road Sign Factory",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "deploy": "gcloud app deploy --service=api",
    "deploy-frontend": "cd .. && npm run build && gcloud app deploy --service=default",
    "setup-db": "psql $DATABASE_URL -f schema.sql",
    "migrate": "node migrations/migrate.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.8.1",
    "pg": "^8.11.1",
    "@google-cloud/storage": "^6.12.0",
    "jsonwebtoken": "^9.0.1",
    "bcrypt": "^5.1.0",
    "multer": "^1.4.5",
    "uuid": "^9.0.0",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
